# This is a template file. Copy this to a new file named .env and fill in your actual values.
# The .env file should NEVER be committed to Git.

# --- Server ---
PORT="3001"
NODE_ENV="development" # Should be 'production' on your live server

# --- Database ---
DATABASE_URL="postgresql://user:password@host:port/database_name"
DATABASE_CA="" # Optional: Required only for certain secure production database connections.

# --- Redis (Required for Production) ---
REDIS_URL="" # e.g., "redis://localhost:6379"

# --- CORS & Frontend ---
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# --- Logging ---
LOG_LEVEL="info" # e.g., 'trace', 'debug', 'info', 'warn', 'error', 'fatal'

# --- Cloudinary ---
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# --- JWT ---
ACCESS_TOKEN_SECRET="your_VERY_strong_and_RANDOM_access_token_secret_here_at_least_32_chars_long"
ACCESS_TOKEN_EXPIRES_IN_SECONDS="900" # 15 minutes
REFRESH_TOKEN_SECRET="your_DIFFERENT_VERY_strong_and_RANDOM_refresh_token_secret_here_at_least_32_chars_long"
REFRESH_TOKEN_EXPIRES_IN_DAYS="7"